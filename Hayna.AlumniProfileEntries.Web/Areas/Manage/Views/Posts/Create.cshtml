@model Hayna.AlumniProfileEntries.Web.Areas.Manage.Models.Posts.CreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<h2>Create</h2>


<div class="row">
    <div class="col-md-6">
        <form action="~/manage/posts/create" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="Company">Company:</label>
                <input type="text" class="form-control" name="Company" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" rows="4" name="Description">
                </textarea>
            </div>
            <div class="form-group">
                <label for="Location">Location</label>
                <textarea class="form-control" rows="4" name="Location">
                </textarea>
            </div>
            <div class="form-group">
                <label for="Position">Position</label>
                <textarea class="form-control" rows="4" name="Position">
                </textarea>
            </div>
            <div class="form-group">
                <label for="ToDate">Post Date:</label>
                <input type="text" class="form-control" name="PostToDate" id="postTodate" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#ToDate").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}
