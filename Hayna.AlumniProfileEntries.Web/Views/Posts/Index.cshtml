@model Hayna.AlumniProfileEntries.Web.VIewModels.IndexViewModel
@using Hayna.AlumniProfileEntries.Web.Infrastructures.Data.Models
@{
    Layout = "~/Views/Shared/_BlogWithWidgets.cshtml";
}

<h1>Announcements</h1>
<section class="post-con">
    @{
        foreach (Post post in Model.Posts)
        {
            <article>
                <div class="info">
                    <img class="card-img-top" src="~/posts/@post.Id/banner.png" alt="Card image cap" style="max-width:750px;max-height:300px;">
                    <h3>@post.Company</h3>
                    <table>
                        <tr>
                            <th>Position</th>
                            <th>Location</th>

                        </tr>
                        <tr>
                            <td>@post.Position</td>
                            <td>@post.Location</td>

                        </tr>
                    </table>
                    <p class="info-line"><span class="time">@post.ToDate.ToString("dddd, dd MMMM yyyy hh:mm tt")</span></p>
                    <p>@post.Description</p>
                    <p><a href="~/posts/@post.Id" class="btn btn-primary">Read More &rarr;</a></p>
                </div>
            </article>
        }
    }
</section>
<!-- Pagination -->
<ul class="pagination justify-content-center mb-4">
    <li class="page-item">
        <a class="page-link" href="#">&larr; Older</a>
    </li>
    <li class="page-item disabled">
        <a class="page-link" href="#">Newer &rarr;</a>
    </li>
</ul>
